<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/sud_edit_text_bg_shape" android:bottom="1dp"/>
            <item android:gravity="bottom">
                <shape>
                    <size android:height="1dp"/>
                    <solid android:color="?android:attr/textColorSecondary"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/sud_edit_text_bg_shape" android:bottom="1dp"/>
            <item android:gravity="bottom">
                <shape>
                    <size android:height="1dp"/>
                    <solid android:color="?android:attr/textColorSecondary"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/sud_edit_text_bg_shape" android:bottom="2dp"/>
            <item android:gravity="bottom">
                <shape>
                    <size android:height="2dp"/>
                    <solid android:color="?android:attr/colorAccent"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
